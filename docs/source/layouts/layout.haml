  = partial "partials/head"
  
  %body{ :id => "susy-oddbird-net", :class => page_classes }

    %div{ :id => "main", :role => "main", :class => "container" }

      %ul.grid-toggle
        %li.on
          %a{ :href => "#susy-oddbird-net" } show grid
        %li.off
          %a{ :href => "#" } hide grid

      %header.lead
        %h1 
          %a.home{ :href => "/"} Susy
        %h2 Responsive grids for <a href="http://www.compass-style.org/">Compass</a>.
    
      %nav
        = partial "partials/navigation"
      
      %section.content.main_content
      
        ~ yield
      
      %section.content.side_content= page_side_content
      
      %footer.ephemera
        = partial "partials/ephemera"
    
    = javascript_include_tag "application.js"
    
    = partial "partials/google_analytics"